<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Reminder"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" x:Class="Reminder.EventForm"
        mc:Ignorable="d"
        Title="" Height="315" Width="187.5" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" >
    <Grid>
        <Button Content="Apply" HorizontalAlignment="Center" VerticalAlignment="Top" Click="Button_Click_Apply" FontSize="24" Height="40" Margin="0,192,0,0"/>

        <TextBox HorizontalAlignment="Center" Margin="0,72,0,0" TextWrapping="Wrap" Text="Title" VerticalAlignment="Top" x:Name="TitleTextBox" FontSize="24" Width="167" />
        <TextBlock HorizontalAlignment="Center" Margin="0,22,0,0" TextWrapping="Wrap" Text="Title" VerticalAlignment="Top" FontSize="32"/>
        <materialDesign:TimePicker HorizontalAlignment="Center" VerticalAlignment="Center" SelectedTime="12:00 AM" FontSize="24" x:Name="TimePicker"/>

    </Grid>
</Window>
