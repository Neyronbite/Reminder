<Window x:Class="Reminder.Views.AlarmsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Reminder.Views"
        mc:Ignorable="d"
        Title="AlarmsWindow" Height="800" Width="600">
    <Grid>
        <ScrollViewer Margin="0 0 0 90">
            <StackPanel  x:Name="AlarmssListView">
                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="24">Alarms</TextBlock>
            </StackPanel>
        </ScrollViewer>
        <Button Content="Add new" Margin="70,700,380,0" FontSize="20" Height="35" Click="Button_Click_Add"/>
        <Button Content="Apply" Margin="380,700,70,0" Background="LawnGreen" BorderBrush="LawnGreen" FontSize="20" Height="35" Click="Button_Click_Apply"/>
    </Grid>
</Window>
