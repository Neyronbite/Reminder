<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Reminder"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" x:Class="Reminder.EventForm"
        mc:Ignorable="d"
        Title="EventForm" Height="400" Width="300">
    <Grid>
        <Button Content="Apply" HorizontalAlignment="Center" Margin="0,300,0,0" VerticalAlignment="Top" Click="Button_Click"/>

        <materialDesign:NumericUpDown HorizontalAlignment="Left" Margin="40,222,0,0" VerticalAlignment="Top" x:Name="HourPicker"/>
        <materialDesign:NumericUpDown HorizontalAlignment="Left" Margin="175,222,0,0" VerticalAlignment="Top" x:Name="MinutePicker"/>
        <TextBlock HorizontalAlignment="Left" Margin="68,191,0,0" TextWrapping="Wrap" Text="Hour" VerticalAlignment="Top" FontSize="20"/>
        <TextBlock HorizontalAlignment="Left" Margin="194,191,0,0" TextWrapping="Wrap" Text="Minute" VerticalAlignment="Top" FontSize="20"/>
        <TextBox HorizontalAlignment="Center" Margin="0,131,0,0" TextWrapping="Wrap" Text="Title" VerticalAlignment="Top" Width="120" x:Name="TitleTextBox" />
        <TextBlock HorizontalAlignment="Center" Margin="0,97,0,0" TextWrapping="Wrap" Text="Title" VerticalAlignment="Top" FontSize="20"/>
        <DatePicker HorizontalAlignment="Center" Margin="0,31,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
